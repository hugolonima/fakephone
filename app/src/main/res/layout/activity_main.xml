<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upc.eseiaat.pma.fakephone.MainActivity">

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/n1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phone_number"
        android:layout_marginStart="13dp"
        android:layout_marginTop="25dp"
        android:width="60dp"
        android:height="60dp"
        android:onClick="clicat"
        android:text="1" />

    <Button
        android:id="@+id/n2"
        android:width="60dp"
        android:height="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clicat"
        android:text="2"
        android:layout_alignBaseline="@+id/n1"
        android:layout_alignBottom="@+id/n1"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/n3"
        android:width="60dp"
        android:height="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clicat"
        android:text="3"
        android:layout_alignBaseline="@+id/n2"
        android:layout_alignBottom="@+id/n2"
        android:layout_alignStart="@+id/btn_call" />

    <Button
        android:id="@+id/n4"
        android:width="60dp"
        android:height="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clicat"
        android:text="4"
        android:layout_below="@+id/n1"
        android:layout_alignStart="@+id/n1"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/n5"
        android:width="60dp"
        android:height="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/n4"
        android:layout_alignStart="@+id/n2"
        android:onClick="clicat"
        android:text="5" />

    <Button
        android:id="@+id/n6"
        android:width="60dp"
        android:height="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/n5"
        android:layout_alignEnd="@+id/n3"
        android:onClick="clicat"
        android:text="6" />

    <Button
        android:id="@+id/n7"
        android:width="60dp"
        android:height="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clicat"
        android:text="7"
        android:layout_alignBaseline="@+id/n8"
        android:layout_alignBottom="@+id/n8"
        android:layout_alignStart="@+id/n4" />

    <Button
        android:id="@+id/n8"
        android:width="60dp"
        android:height="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clicat"
        android:text="8"
        android:layout_below="@+id/n5"
        android:layout_alignStart="@+id/n5"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/n9"
        android:width="60dp"
        android:height="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/n6"
        android:layout_alignTop="@+id/n8"
        android:onClick="clicat"
        android:text="9" />

    <Button
        android:id="@+id/n10"
        android:width="60dp"
        android:height="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clicat"
        android:text="0"
        android:layout_below="@+id/n8"
        android:layout_alignStart="@+id/n8"
        android:layout_marginTop="13dp" />

    <Button
        android:id="@+id/btn_borrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/n7"
        android:layout_marginBottom="27dp"
        android:onClick="borrar"
        android:text="@string/esborrar" />

    <Button
        android:id="@+id/btn_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_borrar"
        android:layout_marginEnd="20dp"
        android:onClick="llamar"
        android:text="@string/trucar" />
</android.widget.RelativeLayout>
